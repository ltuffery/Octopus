{
  "name": "octopus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @octopus/api dev & bun run --filter @octopus/web dev",
    "dev:api": "bun run --filter @octopus/api dev",
    "dev:web": "bun run --filter @octopus/web dev",
    "build": "bun run --filter @octopus/api build && bun run --filter @octopus/web build",
    "test": "bun test",
    "test:e2e": "playwright test",
    "db:generate": "bun run --filter @octopus/api db:generate",
    "db:migrate": "bun run --filter @octopus/api db:migrate",
    "db:studio": "bun run --filter @octopus/api db:studio"
  }
}
